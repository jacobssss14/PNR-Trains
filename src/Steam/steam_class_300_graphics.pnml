spriteset(set_class_300_purchase, "gfx/STEAM/Class_300/class_300.png" ) {
    template_steam_tender_purchase(1, 105)
}

spriteset(set_class_300_pos1, "gfx/STEAM/Class_300/class_300.png") {
    template_standard(1, 1)
}

spriteset(set_class_300_pos2, "gfx/STEAM/Class_300/class_300.png"){
    template_standard(1, 32)
}

spriteset(set_class_300_tender, "gfx/STEAM/Class_300/class_300.png") {
    template_standard(1, 63)
}

//Sprite animation
switch(FEAT_TRAINS, SELF, switch_steam_class_300_animation, motion_counter % 2){
	0: set_class_300_pos1;
	set_class_300_pos2;
}

//Tender attachment
switch(FEAT_TRAINS, SELF, switch_steam_class_300, position_in_vehid_chain % 2) {
	0: switch_steam_class_300_animation;
	set_class_300_tender;
}

//Visual effects
switch(FEAT_TRAINS, SELF, switch_steam_class_300_effect, position_in_vehid_chain % 2) {
	0: return visual_effect_and_powered(VISUAL_EFFECT_STEAM, -3, DISABLE_WAGON_POWER);
	return visual_effect_and_powered(VISUAL_EFFECT_DISABLE, -1, DISABLE_WAGON_POWER);
}

switch(FEAT_TRAINS, SELF, switch_steam_class_300_length, position_in_vehid_chain % 2) {
	0: 8;
	6;
}

switch(FEAT_TRAINS, SELF, switch_steam_class_300_articulated, extra_callback_info1) {
	1: return item_steam_class_300;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}


